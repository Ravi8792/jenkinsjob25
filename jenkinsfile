pipeline {
  agent {label 'label1'}
stages {

    stage ('BUILD') {
      agent {label 'label1'}
      steps {
        echo "This is Build stage" 
          sh 'sleep 5' 
        }
    }
 stage ('TEST PARALLEL') {
	parallel {
	stage (TEST ON CHROME){
      steps {
        echo "This is Test on Chrome Browser" 
          sh 'sleep 5;exit 1' 
        }
    }
	 stage (TEST ON SAFARI){
      steps {
        echo "This is Test on Safari Browser"
          sh 'sleep 5;exit 1'
        }
    }
  }
}

 stage ('DEPLOY') {
agent {label 'label1'}      
      steps {
        echo "This is Deploy stage" 
          sh 'sleep 5' 
        }
    }
  }
}
