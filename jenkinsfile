pipeline {
    agent any
    stages {
    stage('BUILD') {
        steps {
            echo 'this is test stage'
            sh 'sleep 5'
        }
    }

        stage('TEST PARALLEL') {
          parallel {
            stage('TEST ON CHROME BUILD') {
              steps{
            echo 'this is Chrome_Build stage'
            sh 'sleep 5'
              }
            }
        stage('TST ON SAFARI BUILD') {
          steps {
            echo 'this is Safari_build stage'
            sh 'sleep 5'
          }
        }
          }
      stage('DEPLOY') {
        steps {
            echo 'this is deploy stage'
            sh 'sleep 5'
        }
      }
        }
    }
}
